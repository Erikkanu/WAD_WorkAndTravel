@model WAD_WorkAndTravel.Models.Testimonial

@{
    ViewData["Title"] = "Delete Testimonial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-5 mt-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Testimonial</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">Warning!</h5>
                        <p>Are you sure you want to delete this testimonial? This action cannot be undone.</p>
                    </div>

                    <div class="testimonial-card p-4 mb-4 border rounded">
                        <div class="text-center mb-3">
                            <img src="@Url.Content(Model.imagePath)" alt="@Model.Author" class="rounded-circle" width="120" height="120" style="object-fit: cover;">
                        </div>
                        <p class="quote text-center fst-italic">"@Model.Description"</p>
                        <div class="text-center">
                            <h5 class="mb-0">@Model.Author</h5>
                            <small>@Model.Date</small>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="id" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>