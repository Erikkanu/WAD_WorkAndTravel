@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Work And Travel";
}

  <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Work & Travel USA | Your Adventure Starts Here</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/site.css">
</head>
<body>
  <main>
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <div class="row align-items-center min-vh-100">
          <div class="col-lg-6">
            <h1>Discover America Through Work & Travel</h1>
            <p class="lead">Experience the adventure of a lifetime while working in the USA. Gain valuable work experience, improve your English, and explore a new culture.</p>
            <div class="hero-btns">
              <a href="/Registration" class="btn btn-primary btn-lg me-2">Apply Now</a>
              <a href="/Jobs" class="btn btn-outline-primary btn-lg">Browse Jobs</a>
            </div>
          </div>
          <div class="col-lg-6">
            <img src="images/w&t.jpg" alt="Work and Travel USA" class="img-fluid rounded shadow">
          </div>
        </div>
      </div>
    </section>

    <!-- Program Highlights -->
    <section class="program-highlights py-5">
      <div class="container">
        <h2 class="text-center mb-5">USA Work & Travel Program</h2>
        <div class="row g-4">
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-body text-center">
                <i class="fas fa-briefcase fa-3x mb-3 text-primary"></i>
                <h3 class="card-title">Work Experience</h3>
                <p class="card-text">Gain valuable international work experience to boost your resume and future career prospects.</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-body text-center">
                <i class="fas fa-globe-americas fa-3x mb-3 text-primary"></i>
                <h3 class="card-title">Cultural Exchange</h3>
                <p class="card-text">Immerse yourself in American culture while sharing your own heritage with new friends.</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card h-100">
              <div class="card-body text-center">
                <i class="fas fa-map-marked-alt fa-3x mb-3 text-primary"></i>
                <h3 class="card-title">Travel Opportunities</h3>
                <p class="card-text">Explore iconic American destinations during your work placement and travel period.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="how-it-works py-5">
      <div class="container">
        <h2 class="text-center mb-5">How It Works</h2>
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <div class="timeline">
              <div class="timeline-item">
                <div class="timeline-content">
                  <h4>1. Apply</h4>
                  <p>Complete your application and attend an interview with our team.</p>
                </div>
              </div>
              <div class="timeline-item">
                <div class="timeline-content">
                  <h4>2. Get Job Placement</h4>
                  <p>Choose from our available job opportunities that match your skills and preferences.</p>
                </div>
              </div>
              <div class="timeline-item">
                <div class="timeline-content">
                  <h4>3. Visa Process</h4>
                  <p>We'll guide you through the J-1 visa application process.</p>
                </div>
              </div>
              <div class="timeline-item">
                <div class="timeline-content">
                  <h4>4. Pre-Departure Orientation</h4>
                  <p>Get all the information you need before leaving for the USA.</p>
                </div>
              </div>
              <div class="timeline-item">
                <div class="timeline-content">
                  <h4>5. Work, Travel & Explore</h4>
                  <p>Begin your American adventure with our ongoing support.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="text-center mt-4">
          <a href="/Registration" class="btn btn-primary btn-lg">Start Your Journey</a>
        </div>
      </div>
    </section>
    @model List<Testimonial>
        <!-- Testimonials -->
        <section class="testimonials py-5 bg-light">
            <div class="container">
                <div class="text-center mb-3">
                    <a href="/Main/Create" class="btn btn-primary">Add Testimonial</a>
                </div>
                <h2 class="text-center mb-5">Success Stories</h2>
                <div class="row">
                    @foreach (var testimonial in Model)
                    {
                        <div class="col-lg-4">
                            <div class="testimonial-card p-4 mb-4">
                                <p class="quote">"@testimonial.Description"</p>
                                <div class="d-flex align-items-center">
                                    <img src="@Url.Content(testimonial.imagePath)" alt="Testimonial" class="rounded-circle me-3" width="60">
                                    <div>
                                        <h5 class="mb-0">@testimonial.Author</h5>
                                        <small>@testimonial.Date</small>
                                    </div>
                                </div>
                                <div class="mt-3 d-flex justify-content-end">
                                    <a href="@Url.Action("Details", "Main", new { id = testimonial.id })" class="btn btn-outline-primary me-2 btn-sm">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a href="@Url.Action("Edit", "Main", new { id = testimonial.id })" class="btn btn-outline-secondary me-2 btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Main", new { id = testimonial.id })" class="btn btn-outline-danger me-2 btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
          <div class="text-center mt-4">
            <a href="/Gallery" class="btn btn-outline-primary">See More Stories</a>
          </div>
        </div>
      </section>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/main.js"></script>
</body>
</html>