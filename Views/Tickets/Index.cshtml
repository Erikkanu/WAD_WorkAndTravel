@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Tickets";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plane Tickets - Work & Travel Agency</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <!-- Main Content with padding for fixed header -->
    <main class="container pt-5 mt-5">
        <section class="row mb-5">
            <div class="col-12">
                <h1 class="display-4 text-center mb-4">Plane Tickets Information</h1>
                <p class="lead text-center">Find the best flight options for your Work & Travel adventure</p>
            </div>
        </section>

        <!-- Airline Partners Section -->
        <section class="row mb-5">
            <div class="col-12">
                <h2 class="mb-4">Our Airline Partners</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <div class="col">
                        <div class="card h-100 partner-card">
                            <img src="images/aa_logo.png" class="card-img-top" alt="Airline Partner">
                            <div class="card-body">
                                <h5 class="card-title">American Airlines</h5>
                                <p class="card-text">Special discounts for Work & Travel participants. Direct flights to major US cities.</p>
                                <a href="#" class="btn btn-primary">View Offers</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 partner-card">
                            <img src="images/Delta-Logo.png" class="card-img-top" alt="Airline Partner">
                            <div class="card-body">
                                <h5 class="card-title">Delta Airlines</h5>
                                <p class="card-text">Flexible booking options and additional luggage allowance for program participants.</p>
                                <a href="#" class="btn btn-primary">View Offers</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 partner-card">
                            <img src="images/united_logo.png" class="card-img-top" alt="Airline Partner">
                            <div class="card-body">
                                <h5 class="card-title">United Airlines</h5>
                                <p class="card-text">Seasonal promotions and extensive network covering all major US destinations.</p>
                                <a href="#" class="btn btn-primary">View Offers</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Flight Search Form -->
        <form asp-controller="Tickets" asp-action="Search" method="get">
        <div class="row g-3">
        <div class="col-md-6">
            <label for="origin" class="form-label">From</label>
            <input type="text" class="form-control" id="origin" name="origin" placeholder="City or Airport">
        </div>
        <div class="col-md-6">
            <label for="destination" class="form-label">To</label>
            <input type="text" class="form-control" id="destination" name="destination" placeholder="US City or Airport">
        </div>
        <div class="col-md-6">
            <label for="departure" class="form-label">Departure Date</label>
            <input type="date" class="form-control" id="departure" name="departure">
        </div>
        <div class="col-md-6">
            <label for="return" class="form-label">Return Date</label>
            <input type="date" class="form-control" id="return" name="returnDate">
        </div>
        <div class="col-12 text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg px-5">Search Flights</button>
        </div>
    </div>
    </form>
        <!-- Travel Tips Section -->
        <section class="row mb-5">
            <div class="col-12">
                <h2 class="mb-4">Travel Tips</h2>
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-clock me-2 text-primary"></i>Arrival Planning</h5>
                                <p class="card-text">Aim to arrive at least 3-5 days before your job start date to acclimate to the time zone and settle into your accommodations.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-suitcase me-2 text-primary"></i>Packing Essentials</h5>
                                <p class="card-text">Pack for the specific climate of your destination. Don't forget important documents, medications, and appropriate work attire.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><i class="fas fa-mobile-alt me-2 text-primary"></i>Stay Connected</h5>
                                <p class="card-text">Research mobile plans before arrival. Consider purchasing a US SIM card or an international plan for your stay.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Support Section -->
        <section class="row mb-5">
            <div class="col-12">
                <div class="bg-light p-4 rounded">
                    <div class="text-center">
                        <h2 class="mb-3">Need Help with Your Flight Booking?</h2>
                        <p class="lead">Our travel specialists are here to assist you with finding the best flight options for your Work & Travel program.</p>
                        <button class="btn btn-primary btn-lg me-2"><i class="fas fa-phone me-2"></i>Call Us</button>
                        <button class="btn btn-outline-primary btn-lg"><i class="fas fa-envelope me-2"></i>Email Us</button>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>