@model WAD_WorkAndTravel.Models.Ticket

@{
    ViewData["Title"] = "Flight Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="text-center mb-0">Flight Details</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">Flight Information</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-5">Flight Number:</dt>
                                        <dd class="col-sm-7">@Model.FlightNumber</dd>

                                        <dt class="col-sm-5">Airline:</dt>
                                        <dd class="col-sm-7">@Model.Airline</dd>

                                        <dt class="col-sm-5">Price:</dt>
                                        <dd class="col-sm-7">$@Model.Price</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">Departure</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">City:</dt>
                                        <dd class="col-sm-8">@Model.DepCity</dd>

                                        <dt class="col-sm-4">Airport:</dt>
                                        <dd class="col-sm-8">@Model.DepAirport</dd>

                                        <dt class="col-sm-4">Date:</dt>
                                        <dd class="col-sm-8">@Model.DepDate.ToString("yyyy-MM-dd")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-danger text-white">
                                    <h5 class="mb-0">Arrival</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">City:</dt>
                                        <dd class="col-sm-8">@Model.ArrCity</dd>

                                        <dt class="col-sm-4">Airport:</dt>
                                        <dd class="col-sm-8">@Model.ArrAirport</dd>

                                        <dt class="col-sm-4">Date:</dt>
                                        <dd class="col-sm-8">@Model.ArrDate.ToString("yyyy-MM-dd")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.TicketID" class="btn btn-warning px-4">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        }                        
                        <a asp-action="Search" class="btn btn-secondary px-4 ms-2">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>