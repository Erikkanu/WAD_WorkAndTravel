@model WAD_WorkAndTravel.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">Delete Flight</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this flight?</h5>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Flight Summary</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">Flight Number:</dt>
                                        <dd class="col-sm-7">@Model.FlightNumber</dd>

                                        <dt class="col-sm-5">Airline:</dt>
                                        <dd class="col-sm-7">@Model.Airline</dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">From:</dt>
                                        <dd class="col-sm-7">@Model.DepCity (@Model.DepAirport)</dd>

                                        <dt class="col-sm-5">To:</dt>
                                        <dd class="col-sm-7">@Model.ArrCity (@Model.ArrAirport)</dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">Departure:</dt>
                                        <dd class="col-sm-7">@Model.DepDate.ToString("yyyy-MM-dd")</dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">Arrival:</dt>
                                        <dd class="col-sm-7">@Model.ArrDate.ToString("yyyy-MM-dd")</dd>
                                    </dl>
                                </div>
                            </div>

                            <dl class="row">
                                <dt class="col-sm-3">Price:</dt>
                                <dd class="col-sm-9">$@Model.Price</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" class="text-center">
                        <input type="hidden" asp-for="TicketID" />
                        <button type="submit" class="btn btn-danger btn-lg px-5">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="Search" class="btn btn-secondary btn-lg px-5 ms-2">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>