@model WAD_WorkAndTravel.Models.GalleryPost

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Testimonial";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Work & Travel USA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <main>
        <section class="page-hero bg-danger text-white">
            <div class="container py-5">
                <div class="row py-lg-5">
                    <div class="col-lg-8">
                        <h1>@ViewBag.Title</h1>
                        <p class="lead">Are you sure you want to permanently delete this testimonial?</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="confirmation-section py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="alert alert-danger" role="alert">
                            <h4 class="alert-heading">Confirm Deletion!</h4>
                            <p>This action cannot be undone.</p>
                        </div>

                        <div class="card shadow-sm mb-4">
                            <img src="@Model.imagePath" class="card-img-top" alt="@Model.Title" style="max-height: 300px; object-fit: cover;">
                            <div class="card-body">
                                <h3 class="card-title">@Html.DisplayFor(model => model.Title)</h3>
                                <hr />
                                <dl class="row">
                                    <dt class="col-sm-3">Description</dt>
                                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                                    <dt class="col-sm-3">Date</dt>
                                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>
                                </dl>
                            </div>
                        </div>

                        @* This form posts the ID to the DeleteConfirmed action (or equivalent POST action) *@
                        <form asp-action="Delete" method="post">
                            @* Pass the ID of the item to delete *@
                            <input type="hidden" asp-for="id" />

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash-alt me-2"></i>Yes, Delete
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>
</body>
</html>