@model WAD_WorkAndTravel.Models.GalleryPost

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Testimonial Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title | Work & Travel USA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <main>
        <section class="page-hero bg-light text-dark">
             <div class="container py-5">
                 <div class="row py-lg-5">
                    <div class="col-lg-8">
                        <h1>@Model.Title</h1>
                        <p class="lead text-muted">Details of the testimonial.</p>
                    </div>
                 </div>
             </div>
        </section>

        <section class="details-section py-5">
            <div class="container">
                 <div class="row justify-content-center">
                     <div class="col-lg-8">
                         <div class="card shadow-sm">
                             <img src="@Model.imagePath" class="card-img-top" alt="@Model.Title">
                             <div class="card-body">
                                <h2 class="card-title">@Html.DisplayFor(model => model.Title)</h2>
                                <hr/>
                                <dl class="row">
                                    <dt class="col-sm-3">Description</dt>
                                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                                    <dt class="col-sm-3">Date</dt>
                                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

                                    <dt class="col-sm-3">Image Path</dt>
                                    <dd class="col-sm-9">@Html.DisplayFor(model => model.imagePath)</dd>
                                </dl>
                             </div>
                             <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between">
                                 <div>
                                    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-outline-secondary">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                 </div>
                                 <a asp-action="Index" class="btn btn-outline-primary">
                                     <i class="fas fa-arrow-left me-2"></i>Back to Gallery
                                 </a>
                             </div>
                         </div>
                     </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>
</body>
</html>