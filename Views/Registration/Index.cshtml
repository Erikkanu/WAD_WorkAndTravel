@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Work And Travel";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registration | Work & Travel USA</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/site.css">
</head>
<body>
  <main>
    <!-- Registration Hero Section -->
    <section class="page-hero bg-primary text-white">
      <div class="container py-5">
        <div class="row py-5">
          <div class="col-lg-8">
            <h1>Register for Work & Travel USA</h1>
            <p class="lead">Start your American adventure by registering for our program. Choose the plan that's right for you.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Program Plans -->
    <section class="program-plans py-5">
      <div class="container">
        <h2 class="text-center mb-5">Choose Your Plan</h2>
        <div class="row g-4">
          <!-- Basic Plan -->
          <div class="col-md-4">
            <div class="card pricing-card h-100">
              <div class="card-header text-center bg-light">
                <h3 class="my-0">Basic Plan</h3>
              </div>
              <div class="card-body">
                <h2 class="card-title pricing-card-title text-center">$699 <small class="text-muted">/ program</small></h2>
                <ul class="list-unstyled mt-4 mb-5">
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> J-1 visa sponsorship</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Job placement assistance</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Pre-departure orientation</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> SEVIS fee included</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> 24/7 support during program</li>
                  <li class="mb-2 text-muted"><i class="fas fa-times text-danger me-2"></i> Housing assistance</li>
                  <li class="mb-2 text-muted"><i class="fas fa-times text-danger me-2"></i> Travel insurance</li>
                  <li class="mb-2 text-muted"><i class="fas fa-times text-danger me-2"></i> Airport pickup</li>
                </ul>
                <button type="button" class="w-100 btn btn-outline-primary" onclick="selectPlan('Basic')">Select Plan</button>
              </div>
            </div>
          </div>

          <!-- Standard Plan -->
          <div class="col-md-4">
            <div class="card pricing-card h-100 border-primary">
              <div class="card-header text-center bg-primary text-white position-relative">
                <h3 class="my-0">Standard Plan</h3>
                <span class="badge bg-warning text-dark position-absolute top-0 end-0 translate-middle-x" style="z-index: 1;">Popular</span>
              </div>
              <div class="card-body">
                <h2 class="card-title pricing-card-title text-center">$899 <small class="text-muted">/ program</small></h2>
                <ul class="list-unstyled mt-4 mb-5">
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> J-1 visa sponsorship</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Job placement assistance</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Pre-departure orientation</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> SEVIS fee included</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> 24/7 support during program</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Housing assistance</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Travel insurance</li>
                  <li class="mb-2 text-muted"><i class="fas fa-times text-danger me-2"></i> Airport pickup</li>
                </ul>
                <button type="button" class="w-100 btn btn-primary" onclick="selectPlan('Standard')">Select Plan</button>
              </div>
            </div>
          </div>


          <!-- Premium Plan -->
          <div class="col-md-4">
            <div class="card pricing-card h-100">
              <div class="card-header text-center bg-light">
                <h3 class="my-0">Premium Plan</h3>
              </div>
              <div class="card-body">
                <h2 class="card-title pricing-card-title text-center">$1,199 <small class="text-muted">/ program</small></h2>
                <ul class="list-unstyled mt-4 mb-5">
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> J-1 visa sponsorship</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Priority job placement</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Extended pre-departure orientation</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> SEVIS fee included</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> 24/7 premium support</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Guaranteed housing</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Premium travel insurance</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Airport pickup & transfer</li>
                </ul>
                <button type="button" class="w-100 btn btn-outline-primary" onclick="selectPlan('Premium')">Select Plan</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Registration Form -->
    <section class="registration-form py-5 bg-light">
      <div class="container">
        <h2 class="text-center mb-5">Registration Form</h2>
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <div class="card">
              <div class="card-body p-4">
                <form id="registrationForm">
                  <input type="hidden" id="selectedPlan" name="selectedPlan" value="">

                  <div class="alert alert-info" id="planAlert">
                    Please select a plan above to continue with registration.
                  </div>

                  <!-- Personal Information -->
                  <div class="mb-4">
                    <h4>Personal Information</h4>
                    <div class="row g-3">
                      <div class="col-md-6">
                        <label for="firstName" class="form-label">First Name*</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" required>
                      </div>
                      <div class="col-md-6">
                        <label for="lastName" class="form-label">Last Name*</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" required>
                      </div>
                      <div class="col-md-6">
                        <label for="email" class="form-label">Email*</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                      </div>
                      <div class="col-md-6">
                        <label for="phone" class="form-label">Phone Number*</label>
                        <input type="tel" class="form-control" id="phone" name="phone" required>
                      </div>
                      <div class="col-md-6">
                        <label for="dateOfBirth" class="form-label">Date of Birth*</label>
                        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" required>
                      </div>
                      <div class="col-md-6">
                        <label for="nationality" class="form-label">Nationality*</label>
                        <input type="text" class="form-control" id="nationality" name="nationality" required>
                      </div>
                    </div>
                  </div>

                  <!-- University Information -->
                  <div class="mb-4">
                    <h4>University Information</h4>
                    <div class="row g-3">
                      <div class="col-md-6">
                        <label for="university" class="form-label">University/College Name*</label>
                        <input type="text" class="form-control" id="university" name="university" required>
                      </div>
                      <div class="col-md-6">
                        <label for="major" class="form-label">Field of Study/Major*</label>
                        <input type="text" class="form-control" id="major" name="major" required>
                      </div>
                      <div class="col-md-6">
                        <label for="academicYear" class="form-label">Current Academic Year*</label>
                        <select class="form-select" id="academicYear" name="academicYear" required>
                          <option value="">Select Year</option>
                          <option value="1">1st Year</option>
                          <option value="2">2nd Year</option>
                          <option value="3">3rd Year</option>
                          <option value="4">4th Year</option>
                          <option value="5">Graduate Student</option>
                        </select>
                      </div>
                      <div class="col-md-6">
                        <label for="graduationDate" class="form-label">Expected Graduation Date*</label>
                        <input type="month" class="form-control" id="graduationDate" name="graduationDate" required>
                      </div>
                    </div>
                  </div>

                  <!-- Program Preferences -->
                  <div class="mb-4">
                    <h4>Program Preferences</h4>
                    <div class="row g-3">
                      <div class="col-md-6">
                        <label for="preferredStartDate" class="form-label">Preferred Start Date*</label>
                        <input type="month" class="form-control" id="preferredStartDate" name="preferredStartDate" required>
                      </div>
                      <div class="col-md-6">
                        <label for="programDuration" class="form-label">Program Duration*</label>
                        <select class="form-select" id="programDuration" name="programDuration" required>
                          <option value="">Select Duration</option>
                          <option value="2">2 months</option>
                          <option value="3">3 months</option>
                          <option value="4">4 months</option>
                        </select>
                      </div>
                      <div class="col-12">
                        <label for="jobPreferences" class="form-label">Job Preferences (select up to 3)</label>
                        <div class="row g-2">
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="hotel" id="jobHotel" name="jobPreferences">
                              <label class="form-check-label" for="jobHotel">Hotel/Resort</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="restaurant" id="jobRestaurant" name="jobPreferences">
                              <label class="form-check-label" for="jobRestaurant">Restaurant</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="retail" id="jobRetail" name="jobPreferences">
                              <label class="form-check-label" for="jobRetail">Retail</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="amusement" id="jobAmusement" name="jobPreferences">
                              <label class="form-check-label" for="jobAmusement">Amusement Park</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="lifeguard" id="jobLifeguard" name="jobPreferences">
                              <label class="form-check-label" for="jobLifeguard">Lifeguard</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="other" id="jobOther" name="jobPreferences">
                              <label class="form-check-label" for="jobOther">Other</label>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="col-12">
                        <label for="locationPreferences" class="form-label">Preferred Locations (select up to 3)</label>
                        <div class="row g-2">
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="california" id="locCalifornia" name="locationPreferences">
                              <label class="form-check-label" for="locCalifornia">California</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="florida" id="locFlorida" name="locationPreferences">
                              <label class="form-check-label" for="locFlorida">Florida</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="newyork" id="locNewYork" name="locationPreferences">
                              <label class="form-check-label" for="locNewYork">New York</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="colorado" id="locColorado" name="locationPreferences">
                              <label class="form-check-label" for="locColorado">Colorado</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="alaska" id="locAlaska" name="locationPreferences">
                              <label class="form-check-label" for="locAlaska">Alaska</label>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-check">
                              <input class="form-check-input" type="checkbox" value="nopreference" id="locNoPreference" name="locationPreferences">
                              <label class="form-check-label" for="locNoPreference">No Preference</label>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Additional Information -->
                  <div class="mb-4">
                    <h4>Additional Information</h4>
                    <div class="mb-3">
                      <label for="englishLevel" class="form-label">English Proficiency Level*</label>
                      <select class="form-select" id="englishLevel" name="englishLevel" required>
                        <option value="">Select Level</option>
                        <option value="beginner">Beginner</option>
                        <option value="intermediate">Intermediate</option>
                        <option value="advanced">Advanced</option>
                        <option value="fluent">Fluent</option>
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="workExperience" class="form-label">Relevant Work Experience</label>
                      <textarea class="form-control" id="workExperience" name="workExperience" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                      <label for="additionalInfo" class="form-label">Additional Information or Special Requests</label>
                      <textarea class="form-control" id="additionalInfo" name="additionalInfo" rows="3"></textarea>
                    </div>
                  </div>

                  <!-- Terms and Conditions -->
                  <div class="mb-4">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" id="termsAgreement" name="termsAgreement" required>
                      <label class="form-check-label" for="termsAgreement">
                        I agree to the <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms and Conditions</a> and <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal">Privacy Policy</a>
                      </label>
                    </div>
                  </div>

                  <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg" id="submitButton" disabled>Submit Registration</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Modal for Terms and Conditions -->
    <div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="termsModalLabel">Terms and Conditions</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <!-- Terms and Conditions content -->
            <p>Terms and conditions content goes here...</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/main.js"></script>
</body>
</html>