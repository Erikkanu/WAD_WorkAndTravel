@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Work And Travel";
}
@model WAD_WorkAndTravel.Models.RegistrationForm

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registration | Work & Travel USA</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/site.css">
</head>
<body>
  <main>
    <!-- Registration Hero Section -->
    <section class="page-hero bg-primary text-white">
      <div class="container py-5">
        <div class="row py-5">
          <div class="col-lg-8">
            <h1>Register for Work & Travel USA</h1>
            <p class="lead">Start your American adventure by registering for our program. Choose the plan that's right for you.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Program Plans -->
    <section class="program-plans py-5">
      <div class="container">
        <h2 class="text-center mb-5">Choose Your Plan</h2>
        <div class="row g-4">
          <!-- Basic Plan -->
          <div class="col-md-4">
            <div class="card pricing-card h-100">
              <div class="card-header text-center bg-light">
                <h3 class="my-0">Basic Plan</h3>
              </div>
              <div class="card-body">
                <h2 class="card-title pricing-card-title text-center">$699 <small class="text-muted">/ program</small></h2>
                <ul class="list-unstyled mt-4 mb-5">
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> J-1 visa sponsorship</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Job placement assistance</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Pre-departure orientation</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> SEVIS fee included</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> 24/7 support during program</li>
                  <li class="mb-2 text-muted"><i class="fas fa-times text-danger me-2"></i> Housing assistance</li>
                  <li class="mb-2 text-muted"><i class="fas fa-times text-danger me-2"></i> Travel insurance</li>
                  <li class="mb-2 text-muted"><i class="fas fa-times text-danger me-2"></i> Airport pickup</li>
                </ul>
                <button type="button" class="w-100 btn btn-outline-primary" onclick="selectPlan('Basic')">Select Plan</button>
              </div>
            </div>
          </div>

          <!-- Standard Plan -->
          <div class="col-md-4">
            <div class="card pricing-card h-100 border-primary">
              <div class="card-header text-center bg-primary text-white position-relative">
                <h3 class="my-0">Standard Plan</h3>
                <span class="badge bg-warning text-dark position-absolute top-0 end-0 translate-middle-x" style="z-index: 1;">Popular</span>
              </div>
              <div class="card-body">
                <h2 class="card-title pricing-card-title text-center">$899 <small class="text-muted">/ program</small></h2>
                <ul class="list-unstyled mt-4 mb-5">
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> J-1 visa sponsorship</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Job placement assistance</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Pre-departure orientation</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> SEVIS fee included</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> 24/7 support during program</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Housing assistance</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Travel insurance</li>
                  <li class="mb-2 text-muted"><i class="fas fa-times text-danger me-2"></i> Airport pickup</li>
                </ul>
                <button type="button" class="w-100 btn btn-primary" onclick="selectPlan('Standard')">Select Plan</button>
              </div>
            </div>
          </div>


          <!-- Premium Plan -->
          <div class="col-md-4">
            <div class="card pricing-card h-100">
              <div class="card-header text-center bg-light">
                <h3 class="my-0">Premium Plan</h3>
              </div>
              <div class="card-body">
                <h2 class="card-title pricing-card-title text-center">$1,199 <small class="text-muted">/ program</small></h2>
                <ul class="list-unstyled mt-4 mb-5">
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> J-1 visa sponsorship</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Priority job placement</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Extended pre-departure orientation</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> SEVIS fee included</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> 24/7 premium support</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Guaranteed housing</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Premium travel insurance</li>
                  <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Airport pickup & transfer</li>
                </ul>
                <button type="button" class="w-100 btn btn-outline-primary" onclick="selectPlan('Premium')">Select Plan</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Registration Form -->


<section class="registration-form py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Registration Form</h2>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body p-4">
                        <form asp-action="SubmitForm" asp-controller="Registration" method="post">
                            <input type="hidden" asp-for="Plan" />

                            <div class="mb-4">
                                <h4>Personal Information</h4>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="firstName" class="form-label">First Name*</label>
                                        <input type="text" class="form-control" asp-for="FirstName" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="lastName" class="form-label">Last Name*</label>
                                        <input type="text" class="form-control" asp-for="LastName" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">Email*</label>
                                        <input type="email" class="form-control" asp-for="Email" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="phone" class="form-label">Phone Number*</label>
                                        <input type="tel" class="form-control" asp-for="Phone" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="dateOfBirth" class="form-label">Date of Birth*</label>
                                        <input type="date" class="form-control" asp-for="DateOfBirth" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="nationality" class="form-label">Nationality*</label>
                                        <input type="text" class="form-control" asp-for="Nationality" required>
                                    </div>
                                </div>
                            </div>

                            <!-- University Information -->
                            <div class="mb-4">
                                <h4>University Information</h4>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="university" class="form-label">University/College Name*</label>
                                        <input type="text" class="form-control" asp-for="University" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="major" class="form-label">Field of Study/Major*</label>
                                        <input type="text" class="form-control" asp-for="FieldOfStudy" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="academicYear" class="form-label">Current Academic Year*</label>
                                        <select class="form-select" asp-for="YearOfStudy" required>
                                            <option value="">Select Year</option>
                                            <option value="1st Year">1st Year</option>
                                            <option value="2nd Year">2nd Year</option>
                                            <option value="3rd Year">3rd Year</option>
                                            <option value="4th Year">4th Year</option>
                                            <option value="Graduate">Graduate Student</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="graduationDate" class="form-label">Expected Graduation Date*</label>
                                        <input type="month" class="form-control" asp-for="GraduationDate" required>
                                    </div>
                                </div>
                            </div>

                            <!-- Program Preferences -->
                            <div class="mb-4">
                                <h4>Program Preferences</h4>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="preferredStartDate" class="form-label">Preferred Start Date*</label>
                                        <input type="month" class="form-control" asp-for="PreferredStartDate" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="programDuration" class="form-label">Program Duration*</label>
                                        <select class="form-select" asp-for="ProgramDuration" required>
                                            <option value="">Select Duration</option>
                                            <option value="2 months">2 months</option>
                                            <option value="3 months">3 months</option>
                                            <option value="4 months">4 months</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Submit Registration</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


    <!-- Modal for Terms and Conditions -->
    <div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="termsModalLabel">Terms and Conditions</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <!-- Terms and Conditions content -->
            <p>Terms and conditions content goes here...</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="js/main.js"></script>
</body>
</html>