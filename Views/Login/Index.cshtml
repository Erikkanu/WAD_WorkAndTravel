@{
    Layout = null;
}
@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            background-color: #007BFF;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .login-container {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
            box-sizing: border-box;
        }
        .login-container h2 {
            margin-bottom: 20px;
        }
        .input-field {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            box-sizing: border-box !important;
            max-width: 100% !important;
        }
        form {
            width: 100%;
            box-sizing: border-box;
        }
        .login-btn {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 6px;
            cursor: pointer;
            box-sizing: border-box;
        }
        .login-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
                <p class="error-message">@ViewBag.Error</p>
        }
        <form method="post" style="width: 100%; max-width: 100%; box-sizing: border-box;">
            <input type="text" name="username" placeholder="Username (user1)" class="input-field" required style="width: 100%; max-width: 100%; box-sizing: border-box;">
            <input type="password" name="password" placeholder="Password (password123)" class="input-field" required style="width: 100%; max-width: 100%; box-sizing: border-box;">
            <button type="submit" class="login-btn">Login</button>
        </form>
    </div>
</body>
</html>